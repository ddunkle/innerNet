<div class="container formPage">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="card text-center" style="width: 6">
        <div class="card-body text-center">

          <div class="text-center">
            <img src="img/innerNet-logo-trans.png" alt="innerNet" width="200">
          </div>
          <h2 class="text-center sign-up">Sign Up Form</h2>
          <form class="signup">
            <div class="form-group text-center">
              <input type="email" class="form-control" id="email-input" placeholder="Email address or username">
            </div>
            <div class="form-group text-center">
              <input type="password" class="form-control" id="password-input" placeholder="Password">
            </div>
            <div style="display: none" id="alert" class="alert alert-danger text-center" role="alert">
              <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
              <span class="sr-only">Error:</span> <span class="msg"></span>
            </div>
            <div class="text-center">
              <button type="submit" class="btn btn-default">Sign Up</button>
            </div>
          </form>
          <br />
          <p class="text-center">Or log in <a class="link" href="/login">here</a></p>
        </div>
      </div>
    </div>
  </div>
</div>